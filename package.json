{
  "name": "populate-movies",
  "version": "0.0.1",
  "private": true,
  "description": "Populates a full database of movies from TMDB and IMDB into Postgres.",
  "author": "Travis Fischer <travis@transitivebullsh.it>",
  "repository": "transitive-bullshit/populate-movies",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc",
    "clean": "del build",
    "prebuild": "run-s clean && prisma generate",
    "pretest": "run-s build",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "test": "run-p test:*",
    "test:prettier": "prettier '**/*.{js,jsx,ts,tsx}' --check"
  },
  "dependencies": {
    "@keyv/redis": "^2.5.3",
    "@prisma/client": "^4.6.0",
    "csv-parse": "^5.3.2",
    "delay": "^5.0.0",
    "dotenv-safe": "^8.2.0",
    "got": "^12.5.2",
    "keyv": "^4.5.2",
    "lqip-modern": "^2.0.0",
    "make-dir": "^3.1.0",
    "movier": "^2.1.7",
    "p-map": "^5.5.0",
    "p-memoize": "^7.1.1",
    "p-throttle": "^5.0.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.4.0",
    "@types/node": "^18.11.9",
    "del-cli": "^5.0.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prisma": "^4.6.0",
    "tsx": "^3.11.0",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ]
  }
}
